<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <!-- CSSファイルの読み込み -->
    <%= stylesheet_link_tag 'books', :media => 'all' %>
    <title>WebCampBackendNew</title>
  </head>
  <body>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <span><%= book.title %></span>
          </td>
          <td>
            <span><%= book.body %></span>
          </td>
          <td>
            <span><%= link_to "Show", "/books/#{book.id}" %></span>
          </td>
          <td>
            <span><%= link_to "Edit", "/books/#{book.id}/edit" %></span>
          </td>
          <td>
            <span><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <h2>New book</h2>
    <%= form_for(@book) do |f| %>
      <% if @book.errors.any? %>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
      </div>
      <div class="action">
      <%= f.submit 'Create Book' %>
      </div>
    <% end %>
  </body>
</html>
